# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/amrutam_telemedicine?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# MFA Configuration
MFA_OTP_EXPIRY_MINUTES=10
MFA_OTP_LENGTH=6

# Email Configuration (Stub)
EMAIL_FROM=noreply@amrutam.health
EMAIL_VERIFICATION_EXPIRY_HOURS=24
PASSWORD_RESET_EXPIRY_HOURS=1

# Idempotency
IDEMPOTENCY_KEY_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Metrics
METRICS_ENABLED=true

# Consultation Settings
CONSULTATION_CANCELLATION_HOURS=2
REMINDER_HOURS_BEFORE=2
